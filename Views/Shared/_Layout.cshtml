<!DOCTYPE html>

<html>
<head>
    @*bring in bootstrap and html, set up title*@
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">Book Store</div>
                <div class="col-1 text-right">
                    <vc:basket-summary />
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:categories></vc:categories>
        </div>
        @*this is a shared layout, so the body needs to be rendered*@
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    
    <footer>Seth's Book Store © 2022</footer>
</body>
</html>