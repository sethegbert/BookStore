@inherits LayoutComponentBase

@* Here I added a red border around the navbar to demonstrate bootstrap.*@

<div class="bg-info text-white p-2 border border-5 border-danger">
    
    <div class="container-fluid">

        <div class="row">

            <div class="col">
                <span class="navbar-brand m-lg-2">Book Store Administration</span>
            </div>

            <div class="col-2 text-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a> 
            </div>

        </div>

    </div>

</div>

<div class="container-fluid">

    <div class="row p-2">

        <div class="col-3">

            @*On the second button I added a shadow effect to demonstrate bootstrap. I only put it on one button to show the difference between the two.*@

            <div class="d-grid gap-2">
                <NavLink class="btn btn-outline-primary" href="/admin/books"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
                <NavLink class="btn btn-outline-primary shadow-lg" href="/admin/purchases"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Purchases</NavLink>
            </div>

        </div>

        <div class="col">
            @Body
        </div>


    </div>

</div>