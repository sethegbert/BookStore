@page
@model BookStore.Pages.PurchaseCompletedModel
@{
}

@*A page to be sent to when a purchase is complete*@

<div class="text-center">
    <h2>Thank you, your items will be sent shortly.</h2>
    <a class="btn btn-primary" asp-controller="Home">Return Home</a>
</div>

@* This is a progress bar to demonstrate booststrap *@

<br /><br /><br />

<div class="container">
    <h2>One step closer to receiving your order!</h2>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width:95%">
            <span class="sr-only">95% Complete</span>
        </div>
    </div>
</div>